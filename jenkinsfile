pipeline {
    agent {
        docker {
            label 'jenkins-alpine'
        }
        // or label 'jenkins-alpine'
    }
    triggers {
        pollSCM('H/2 * * * *') // Checks for SCM changes every 2 minutes
    }
    stages {
      
        stage('Build') {
            steps {
                // Add your build commands here
                sh 'echo "Building..."'
            }
        }
        stage('Test') {
            steps {
                // Add your test commands here
                sh 'echo "Testing..."'
            }
        }
        stage('Deploy') {
            steps {
                // Add deployment commands here
                sh 'echo "Deploying..."'
            }
        }
    }
   
}